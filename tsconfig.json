{
  "compilerOptions": {
    "jsx": "react",
    "noEmit": true,
    "target": "ESNext",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["app/*"]
    },
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  }
}
